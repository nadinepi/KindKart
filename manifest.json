{
    "name": "KindKart Version 2",
    "version": "0.1",
    "description": "Add a little kindness to your cart!",
    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs",
        "storage"
    ],
    "background": {
        "page": "background.html",
        "persistent": false

    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "exclude_globs":["*checkout*"],
        "js": ["js/main.js"],
        "css": ["css/main.css"],
        "run_at": "document_end"
        },
        {
        "matches": ["<all_urls>"],
        "exclude_globs": ["<all_urls>"],
        "include_globs": ["*checkout*"],
        "js":["js/checkout.js"],
        "css": ["css/checkout.css"],
        "run_at": "document_start"
        }
    ],

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "KindKart",
        "default_icon": {   
            "16" : "images/smallcart.png",
            "48" : "images/cart.png"
        }
    },
    
    "icons": {  "16" : "images/smallcart.png",
                "48" : "images/cart.png",
                "128": "images/kindkartlogowhite.png"},

    "manifest_version": 2,
    "web_accessible_resources": ["images/*"],

    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}